<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:LifeManagementApp.Models"
             x:Class="LifeManagementApp.Views.NotePage"
             Title="Note">

    <Grid RowDefinitions="Auto,*,Auto">
        <Label x:Name="dateLabel"
               Grid.Row="0"
               Margin="10"
               FontAttributes="Bold"
               FontSize="18" />

        <Editor x:Name="TextEditor"
                Grid.Row="1"
                Placeholder="Enter note text"
                Text="{Binding Text}"
                Margin="10" />

        <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="10" Margin="10">
            <Button Text="Delete"
                    Grid.Column="0"
                    Clicked="DeleteButton_Clicked"
                    BackgroundColor="Red" />

            <Button Text="Save"
                    Grid.Column="1"
                    Clicked="SaveButton_Clicked"
                    BackgroundColor="Green" />
        </Grid>
    </Grid>

</ContentPage>

