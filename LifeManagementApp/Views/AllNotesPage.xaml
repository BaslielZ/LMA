<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:LifeManagementApp.Models"
             x:Class="LifeManagementApp.Views.AllNotesPage"
             Title="Notes">
    
    <Grid RowDefinitions="Auto,*,Auto">
        <HorizontalStackLayout Grid.Row="0" Spacing="10" Margin="10" HorizontalOptions="End">
            <Button Text="About" Clicked="About_Clicked" Padding="10,5" />
        </HorizontalStackLayout>
        
        <CollectionView x:Name="notesCollection"
                        Grid.Row="1"
                        ItemsSource="{Binding .}"
                        SelectionMode="Single"
                        SelectionChanged="notesCollection_SelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Note">
                    <Grid Padding="10">
                        <Frame BorderColor="Gray" HasShadow="True">
                            <StackLayout Spacing="5">
                                <Label Text="{Binding Date, StringFormat='{0:dddd, MMMM dd, yyyy}'}"
                                       FontAttributes="Bold"
                                       FontSize="18" />
                                <Label Text="{Binding Text}"
                                       LineBreakMode="WordWrap"
                                       MaxLines="2" />
                            </StackLayout>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="+ Add Note"
                Grid.Row="2"
                Clicked="Add_Clicked"
                Margin="10" />
    </Grid>

</ContentPage>

